  },
  "homepage": "https://github.com/musienkoyuriy/ns#readme",
  "dependencies": {
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.39",
    "ink": "^3.2.0",
    "ink-text-input": "^4.0.3",
    "react": "^17.0.2"
  },
  "files": [
    "build"
  ],
  "devDependencies": {
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.5",
